<!-- res/layout/item_quran_page.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/quran_page_background">

    <!-- Page Number and Hizb -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page 2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/tvHizbInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hizb 1"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onPrimaryFixed" />
    </LinearLayout>

    <!-- Ayat List (Container for dynamic ayahs) -->
    <LinearLayout
        android:id="@+id/ayatContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <!-- Action Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/ivBookmark"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_bookmark"
            android:layout_weight="1"
            android:contentDescription="@string/bookmark" />

        <ImageView
            android:id="@+id/ivPlayAudio"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_play"
            android:layout_weight="1"
            android:contentDescription="@string/play_ayah" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_share"
            android:layout_weight="1"
            android:contentDescription="@string/share" />
    </LinearLayout>
</LinearLayout>
