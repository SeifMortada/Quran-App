<!-- res/drawable/quran_page_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAF3E0" /> <!-- Light cream color -->
        </shape>
    </item>

    <!-- Border -->
    <item android:right="8dp" android:left="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#B59F84" /> <!-- Subtle brown color -->
        </shape>
    </item>

    <!-- Gradient overlay for visual depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FFFFFF"
                android:endColor="#FAF3E0"
                android:type="linear" />
        </shape>
    </item>

</layer-list>
